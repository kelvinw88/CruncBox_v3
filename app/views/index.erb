<% @posts.each do |post| %>

  <form method="post" action="/posts/upvote">
    <input type="hidden" name="post_id" value="<%=post.id%>">
    <input type="submit" value="Vote">
  </form>

  <p><%= post.status %></p>
  <p><%= post.votes.count %></p>
  <p><%= post.content %></p>
  <p><small><%= post.created_at.strftime("%B %d %Y %r") %></small></p>

  <%post.comments.each do |comment| %>
    <p><%=comment%></p>
  <% end %>

<% end %>
