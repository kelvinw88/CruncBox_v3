  <!-- Latest compiled and minified JavaScript -->
  <!--<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>-->

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <script src="/javascript/masonry.pkgd.min.js"></script>
  <script src="/javascript/handlebars-v1.3.0.js"></script>
  <title>Cruncbox</title>
</head>

<body>
  <div id="gradient">
    <header>
      <p>
        <a href="/">
          <img id="logo" src="/img/logo.png">
        </a>
      </p>
      <nav>
        <ul>
          <li>
            <button id="show_drunk" type="submit" value=""></button>

            <img class="icon" src="/img/drunk.png">
            <p id="drunk_nav">DRUNK</p>
            <form method="get" action="/posts/drunk/new">
              <input id="post_drunk" type="submit" value="">
              <input type="hidden" name="status" value="drunk">
            </form>

            <!-- <form method="get" action="/drunk">
              <input id="show_drunk" type="submit" value="">
            </form>
            <img class="icon" src="/img/drunk.png">
            <p id="drunk_nav">DRUNK</p>
            <form method="get" action="/posts/drunk/new">
              <input id="post_drunk" type="submit" value="">
              <input type="hidden" name="status" value="drunk">
            </form> -->
          </li>

          <li>
            <form method="get" action="/sober">
              <input id="show_sober" type="submit" value="">
            </form>
            <img class="icon" src="/img/sober.png">
            <p id="sober_nav">SOBER</p>

            <form method="get" action="/posts/sober/new">
              <input id="post_sober" type="submit" value="">
              <input type="hidden" name="status" value="sober">
            </form>
          </li>

          <li>
            <form method="get" action="/high">
              <input id="show_high" type="submit" value="">
            </form>
            <img class="icon" src="/img/high.png">
            <p id="high_nav">HIGH</p>
            <form method="get" action="/posts/high/new">
              <input id="post_high" type="submit" value="">
              <input type="hidden" name="status" value="high">
            </form>
          </li>

        </ul>
      </nav>
    </header>

    <div class="container">
      <div class="row">
        <div class="grid">
          <%=yield%>
        </div>
      </div>
    </div>

    <footer>
      <div class="addthis_native_toolbox">
        <script type="text/javascript" src="https://s7.addthis.com/js/300/addthis_widget.js#pubid=ra-53da6ada22298d73"></script>
    </footer>
  </div>
<script src="/javascript/application.js"></script>

<script id="post-template" type="text/x-handlebars-template">

  {{#posts}}
    <div class="col-centered col-xs-12 col-sm-6 col-md-4 col-lg-3">
      <div class="item clearfix {{status}}">
        <form class = "vote" method="post" action="/posts/upvote">
          <input type="hidden" name="post_id" value="{{id}}">
          <input type="submit" value="">
        </form>
        <p class="post_vote">{{votes.length}}</p>
        {{#if file.url}}
          <a href = "/posts/{{id}}/show">
              <p><img src="{{file.url}}" ></p>
          </a>
        {{/if}}
        <p><a class="post_msg"href="/posts/{{id}}/show">{{content}}</a></p>
        <p><small>{{created_at}}</small></p>
        {{#comments}}
        <p>{{content}}</p>
        {{/comments}}
      </div>
    </div>



  {{/posts}}
</script>


<!-- <script src="/javascript/gradient.js"></script> -->


</body>

</html>
